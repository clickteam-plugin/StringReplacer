
// This file may also be external to your MFX file - just give it the same name
// as your MFX and place it in Data/Runtime.  The same goes for the icon.

"About":
{
    "Name": "Substring Replacer object"
    "Author": "Darkwire Software"
    "Copyright": "Copyright © 2012 Darkwire Software"
    "Comment": "A quick extension to work around the crash experienced by the original object."
    "URL": "http://www.dark-wire.com"
    "Help": ""

	// Four unique characters to identify this object
    "Identifier": "SBSR"
}

"ActionMenu":
[
	[0, "Clear all macros"]
	[1, "Add new auto-replace macro"]
	
	"Separator"
]

"ConditionMenu":
[
	[0, "Darkwire Software", 1]
]

"ExpressionMenu":
[
   [0, "Run macro replace on this string"]
   [1, "Run string replace on this string"]
]

"Actions":
[
    { "Title": "Add new macro %0 to replace with %1"
      
      "Parameters":
      [
		  ["String", "String to search for:"]
		  ["String", "String to replace with:"]
      ]
    }
    
    { "Title": "Clear all macros"
    }
]

"Conditions":
[
	// None
]

"Expressions":
[
    {   "Title": "AutoReplace("
        "Returns": "String"
        
        "Parameters":
        [
			["String", "Search in"]
        ]
    }
    
    {   "Title": "StringReplace("
        "Returns": "String"
        
        "Parameters":
        [
			["String", "Search in"]
			["String", "Search for"]
			["String", "Replace with"]
        ]
    }
]

